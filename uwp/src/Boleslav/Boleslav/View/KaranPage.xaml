<UserControl
    x:Class="Boleslav.View.KaranPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Boleslav.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.Resources>
            <local:EadwulfVisibility x:Key="EadwulfVisibility"></local:EadwulfVisibility>
        </Grid.Resources>
        <TextBox x:Name="Eadwulf" Margin="10,10,100,10" Background="Transparent" IsReadOnly="True"
                 Text="{x:Bind Text,Mode=TwoWay}"
                AcceptsReturn="True" TextWrapping="Wrap"
                LostFocus="UIElement_OnLostFocus"></TextBox>
        <Button x:Name="Button" Content="编辑"
                HorizontalAlignment="Right"
                Visibility="{x:Bind Eadwulf.IsReadOnly,Mode=OneWay,Converter={StaticResource EadwulfVisibility}}"
                Click="ButtonBase_OnClick"></Button>
    </Grid>
</UserControl>
